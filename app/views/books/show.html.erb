<div class="container pt-3 pb-5">
  <div class="row">
    <div class="col-md-3 pr-1">

    <%= render 'users/userinfo', user: @user %>

    <%= render 'books/newbook', book: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <div>
        <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %>
		          <% end %><br>

                <%= link_to @book.user.name,user_path(@book.user) %>
           </td>
           <td><%= link_to @book.title %></td>
           <td><%= @book.body %></td>
             <% if @book.user_id == current_user.id %>
              <td><%= link_to"Edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "本当に消しますか？"} %></td>
             <% end %>
         </tr>
       </tbody>
       </table>
   </div>