<div class="container pt-3 pb5">
  <div class="row">
   <div class="col-lg-5 mx-auto">

     <h2>Editing Book</h2>
       <%= form_with(model:@book, local: true) do |form| %>
          <% if @book.errors.any? %>
            <div id="error_explanation">
              <h3><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h3><ul>
              <ul>
                  <% @book.errors.full_messages.each do |message| %>
                   <li><%= message %></li>
                  <% end %>
             </ul>
            </div>
          <% end %>
       <% end %>

     <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
       <div class="form-group">
         <label for="book_title">Title</label><br>
            <%= f.text_field :title %>
       </div>
       <div class="form-group">
         <label for="book_opinion">Opinion</label><br>
            <%= f.text_area :body %>
       </div>
       <div class="form-group">
            <%= f.submit 'Update Book',class:"btn btn-success" %>
       </div>

       <div class="link">
            <%= link_to "Show", book_path(@book.id) %>
            <%= " | " %>
            <%= link_to "Back", books_path %>
       </div>
     <% end %>
   </div>
  </div>
 </div>
